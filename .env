# Environment Configuration for Enterprise Data Modeling Application

# Application Settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=retail_analytics
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
DATABASE_URL=postgresql://postgres:password@postgres:5432/retail_analytics

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# MLflow Configuration
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_BACKEND_STORE_URI=postgresql://postgres:password@postgres:5432/retail_analytics
MLFLOW_DEFAULT_ARTIFACT_ROOT=/mlflow

# Security
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
STREAMLIT_HOST=0.0.0.0
STREAMLIT_PORT=8501

# Monitoring
PROMETHEUS_ENDPOINT=http://prometheus:9090
GRAFANA_ENDPOINT=http://grafana:3000

# External Services
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=retail-analytics-data

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# Feature Flags
ENABLE_ML_MODELS=true
ENABLE_REAL_TIME_ANALYTICS=true
ENABLE_ANOMALY_DETECTION=true
ENABLE_CUSTOMER_SEGMENTATION=true

# Performance Settings
MAX_WORKERS=4
CHUNK_SIZE=10000
CACHE_TTL=3600
BATCH_SIZE=1000

# Logging
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log
ERROR_LOG_FILE=/app/logs/error.log
ACCESS_LOG_FILE=/app/logs/access.log
